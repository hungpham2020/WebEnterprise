@model IEnumerable<WebEnterprise.Models.Category>
@{
    ViewData ["Title"] ="Index";
    Layout = "../Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    ViewBag.Message = TempData["message"];
}

<!DOCTYPE html>
<html lang="zxx" class="js">
    @await Html.PartialAsync("_Message")
<body class="nk-body bg-lighter npc-general has-sidebar ">

     <!-- main header  -->
                <!-- main header  -->
                <!-- content  -->
                <div class="nk-content ">
                    <div class="container-fluid">
                        <div class="nk-content-inner">
                            <div class="nk-content-body">
                                <div class="nk-block-head nk-block-head-sm">
                                    <div class="nk-block-between">
                                        <div class="nk-block-head-content">
                                            <h3 class="nk-block-title page-title">Categories</h3>
                                        </div><!-- .nk-block-head-content -->
                                        <div class="nk-block-head-content">
                                            <div class="toggle-wrap nk-block-tools-toggle">
                                                <a href="#" class="btn btn-icon btn-trigger toggle-expand mr-n1" data-target="pageMenu"><em class="icon ni ni-more-v"></em></a>
                                                <div class="toggle-expand-content" data-content="pageMenu">
                                                    <ul class="nk-block-tools g-3">
                                                        <li>
                                                            <form class="form-control-wrap" asp-route-pageIndex="@ViewBag.PageIndex" asp-route-pageSize="@ViewBag.PageSize" asp-route-keyword="">
                                                                <input type="text" class="form-control" name="keyword" id="search" placeholder="Search by name">
                                                                <button type="submit" class="form-icon form-icon-right btn" ><em class="icon ni ni-search"></em></button>
                                                            </form>
                                                        </li>
                                                         <li class="nk-block-tools-opt">
                                                            <a data-target="addproduct" class="toggle btn btn-icon btn-primary d-md-none"><em class="icon ni ni-plus"></em></a>
                                                            <a data-target="addproduct" class="toggle btn btn-primary d-none d-md-inline-flex" style=" color:white"><em class="icon ni ni-plus"></em><span>Add Category</span></a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div><!-- .nk-block-head-content -->
                                    </div><!-- .nk-block-between -->
                                </div><!-- .nk-block-head -->
                                <div class="nk-block">
                                    <div class="card card-bordered">
                                        <div class="card-inner-group">
                                            <div class="card-inner p-0">
                                                <div class="nk-tb-list">
                                                    <div class="nk-tb-item nk-tb-head">
                                                        <div class="nk-tb-col tb-col-sm"><span>Name</span></div>
                                                        <div class="nk-tb-col tb-col-md"><span>Description</span></div>
                                                       
                                                         <div class="nk-tb-col tb-col-md">
                                                            <ul class="nk-tb-actions gx-1 my-n1">

                                                                <li class="mr-n1">
                                                                    <div><span>Action</span></div>
                                                                </li>

                                                            </ul>
                                                        </div>

                                                    </div><!-- .nk-tb-item -->


                                                    @foreach (var item in Model) 
                                                    {
                                                     <div class="nk-tb-item">
                                                        <div class="nk-tb-col">
                                                            <span class="tb-lead">
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </span>
                                                        </div>
                                                        <div class="nk-tb-col">
                                                            <span class="tb-sub">
                                                                @Html.DisplayFor(modelItem => item.Description)
                                                            </span>
                                                        </div>
                                                       
                                                        <div class="nk-tb-col nk-tb-col-tools">
                                                            <ul class="nk-tb-actions gx-1 my-n1">
                                                                <li class="mr-n1">
                                                                    <div class="dropdown">
                                                                        <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-toggle="dropdown"><em class="icon ni ni-more-h"></em></a>
                                                                        <div class="dropdown-menu dropdown-menu-right">
                                                                            <ul class="link-list-opt no-bdr">
                                                                                <li><span>@Html.ActionLink("Edit Category", "EditCat", new {  id=item.Id  })</span></li>
                                                                                <li><span>@Html.ActionLink("Delete", "DeleteCat", new { id=item.Id }, new {onClick = "return confirm('Are you sure?')"})</span></li>
                                                                            </ul>
                                                                        </div>
                                                                    </div>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <!-- .nk-tb-item -->

                                                 }

                                                   
                                                </div><!-- .nk-tb-list -->
                                            </div>
                                           
                                        </div>
                                    </div>
                                </div>
                                @Html.Partial("PagingPartial")
                                <!-- .nk-block -->



                                  <form method="post" asp-action="AddCat"  asp-controller="Category" asp-area="">
                                    <div class="nk-add-product toggle-slide toggle-slide-right" data-content="addproduct" data-toggle-screen="any" data-toggle-overlay="true" data-toggle-body="true" data-simplebar>
                                    <div class="nk-block-head">
                                        <div class="nk-block-head-content">
                                            <h5 class="nk-block-title">New category</h5>
                                            <div class="nk-block-des">
                                                <p>add information and add new category.</p>
                                            </div>
                                        </div>
                                    </div><!-- .nk-block-head -->
                                    <div class="nk-block">
                                        <div class="row g-3">

                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="catname">Category name</label>
                                                    <div class="form-control-wrap">
                                                        <input type="text" class="form-control" name="catname">
                                                    </div>
                                                </div>
                                            </div>
                                      
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="description">Description</label>
                                                    <div class="form-control-wrap">
                                                        <input type="text" class="form-control" name="description">
                                                    </div>
                                                </div>
                                            </div>
                                      
                                            <div class="col-12">
                                                <button class="btn btn-primary" type="submit"><em class="icon ni ni-plus"></em><span>Add</span></button>
                                            </div>


                                        </div>
                                    </div><!-- .nk-block -->
                                </div>
                              </form>


                            </div>
                        </div>
                    </div>
                </div>
                <!-- content  -->

</body>
</html>
